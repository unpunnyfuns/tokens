{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tokens.unpunny.fun/schemas/v0.2.1/tokens/types/dimension.schema.json",
  "title": "Dimension Token Schema",
  "description": "Schema for dimension tokens (spacing, sizing, etc)",
  "allOf": [
    {
      "$ref": "../base.schema.json#/$defs/leaf"
    },
    {
      "type": "object",
      "properties": {
        "$type": {
          "type": "string",
          "const": "dimension"
        },
        "$value": {
          "oneOf": [
            {
              "$ref": "../value-types.schema.json#/$defs/dtcgReference"
            },
            {
              "$ref": "../value-types.schema.json#/$defs/dimensionValue"
            }
          ]
        }
      },
      "required": ["$type"]
    }
  ]
}
