{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tokens.unpunny.fun/schemas/v0.4.0/tokens/types/cubic-bezier.schema.json",
  "title": "Cubic Bezier Token Schema",
  "description": "Schema for cubic bezier tokens (animation timing functions)",
  "allOf": [
    {
      "$ref": "../base.schema.json#/$defs/leaf"
    },
    {
      "type": "object",
      "properties": {
        "$type": {
          "type": "string",
          "const": "cubicBezier"
        },
        "$value": {
          "type": "array",
          "description": "Four control points [x1, y1, x2, y2] for cubic bezier curve",
          "items": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "minItems": 4,
          "maxItems": 4
        }
      },
      "required": [
        "$type"
      ]
    }
  ]
}
