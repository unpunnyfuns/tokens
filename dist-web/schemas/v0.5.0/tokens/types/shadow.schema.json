{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tokens.unpunny.fun/schemas/v0.5.0/tokens/types/shadow.schema.json",
  "title": "Shadow Token Schema",
  "description": "Schema for shadow composite tokens",
  "allOf": [
    {
      "$ref": "../base.schema.json#/$defs/leaf"
    },
    {
      "type": "object",
      "properties": {
        "$type": {
          "type": "string",
          "const": "shadow"
        },
        "$value": {
          "oneOf": [
            {
              "$ref": "../value-types.schema.json#/$defs/dtcgReference"
            },
            {
              "type": "object",
              "properties": {
                "color": {
                  "$ref": "../value-types.schema.json#/$defs/colorValueOrRef"
                },
                "offsetX": {
                  "$ref": "../value-types.schema.json#/$defs/dimensionValueOrRef"
                },
                "offsetY": {
                  "$ref": "../value-types.schema.json#/$defs/dimensionValueOrRef"
                },
                "blur": {
                  "$ref": "../value-types.schema.json#/$defs/dimensionValueOrRef"
                },
                "spread": {
                  "$ref": "../value-types.schema.json#/$defs/dimensionValueOrRef"
                },
                "inset": {
                  "$ref": "../value-types.schema.json#/$defs/booleanOrRef"
                }
              },
              "$comment": "Per DTCG spec: color, offsetX, offsetY, blur, spread are required. inset is optional (defaults to false)",
              "required": [
                "color",
                "offsetX",
                "offsetY",
                "blur",
                "spread"
              ],
              "additionalProperties": false
            },
            {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "color": {
                    "$ref": "../value-types.schema.json#/$defs/colorValueOrRef"
                  },
                  "offsetX": {
                    "$ref": "../value-types.schema.json#/$defs/dimensionValueOrRef"
                  },
                  "offsetY": {
                    "$ref": "../value-types.schema.json#/$defs/dimensionValueOrRef"
                  },
                  "blur": {
                    "$ref": "../value-types.schema.json#/$defs/dimensionValueOrRef"
                  },
                  "spread": {
                    "$ref": "../value-types.schema.json#/$defs/dimensionValueOrRef"
                  },
                  "inset": {
                    "$ref": "../value-types.schema.json#/$defs/booleanOrRef"
                  }
                },
                "$comment": "Per DTCG spec: color, offsetX, offsetY, blur, spread are required. inset is optional (defaults to false)",
                "required": [
                  "color",
                  "offsetX",
                  "offsetY",
                  "blur",
                  "spread"
                ],
                "additionalProperties": false
              }
            }
          ]
        }
      },
      "required": [
        "$type"
      ]
    }
  ]
}
