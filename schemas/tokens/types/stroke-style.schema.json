{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Stroke Style Token Schema",
  "description": "Schema for stroke style tokens (line/border styles)",
  "allOf": [
    { "$ref": "../base.schema.json#/$defs/leaf" },
    {
      "type": "object",
      "properties": {
        "$type": {
          "type": "string",
          "const": "strokeStyle"
        },
        "$value": {
          "oneOf": [
            {
              "$ref": "../value-types.schema.json#/$defs/borderStyleEnum"
            },
            {
              "$ref": "../value-types.schema.json#/$defs/strokeStyleObject"
            }
          ]
        }
      },
      "required": ["$type"]
    }
  ]
}
