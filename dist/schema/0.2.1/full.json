{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tokens.unpunny.fun/schema/0.2.1/full",
  "title": "Strict Full Design Tokens Schema",
  "description": "Complete schema with strict validation for all defined token types",
  "$ref": "#/$defs/root",
  "$defs": {
    "root": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string",
          "description": "Reference to the JSON schema"
        },
        "$description": {
          "type": "string",
          "description": "Description of the token file"
        },
        "$extensions": {
          "type": "object",
          "description": "Custom extensions",
          "additionalProperties": true
        }
      },
      "patternProperties": {
        "^[^$].*": {
          "$ref": "#/$defs/groupOrToken"
        }
      },
      "additionalProperties": false
    },
    "group": {
      "type": "object",
      "properties": {
        "$description": {
          "type": "string",
          "description": "Description of this group"
        },
        "$extensions": {
          "type": "object",
          "description": "Custom extensions",
          "additionalProperties": true
        }
      },
      "patternProperties": {
        "^[^$].*": {
          "$ref": "#/$defs/groupOrToken"
        }
      },
      "additionalProperties": false
    },
    "groupOrToken": {
      "anyOf": [
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.2.1/color"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.2.1/dimension"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.2.1/font-family"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.2.1/font-weight"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.2.1/duration"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.2.1/number"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.2.1/shadow"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.2.1/typography"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.2.1/cubic-bezier"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.2.1/stroke-style"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.2.1/border"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.2.1/transition"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.2.1/gradient"
        },
        {
          "$ref": "#/$defs/group"
        }
      ]
    }
  }
}