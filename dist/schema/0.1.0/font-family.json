{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tokens.unpunny.fun/schema/0.1.0/font-family",
  "title": "Font Family Token Schema",
  "description": "Schema for font family tokens",
  "allOf": [
    {
      "$ref": "https://tokens.unpunny.fun/schema/0.1.0/base#/$defs/leaf"
    },
    {
      "type": "object",
      "properties": {
        "$type": {
          "type": "string",
          "const": "fontFamily"
        },
        "$value": {
          "oneOf": [
            {
              "type": "string",
              "description": "Single font family or comma-separated list"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Array of font families"
            }
          ]
        }
      },
      "required": [
        "$type"
      ]
    }
  ]
}