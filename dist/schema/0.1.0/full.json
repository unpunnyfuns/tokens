{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tokens.unpunny.fun/schema/0.1.0/full",
  "title": "Full Design Tokens Schema",
  "description": "Complete schema with all token types for full validation",
  "$ref": "#/$defs/root",
  "$defs": {
    "root": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string",
          "description": "Reference to the JSON schema"
        },
        "$description": {
          "type": "string",
          "description": "Description of the token file"
        },
        "$extensions": {
          "type": "object",
          "description": "Custom extensions",
          "additionalProperties": true
        }
      },
      "patternProperties": {
        "^[^$].*": {
          "$ref": "#/$defs/groupOrToken"
        }
      },
      "additionalProperties": false
    },
    "group": {
      "type": "object",
      "properties": {
        "$description": {
          "type": "string",
          "description": "Description of this group"
        },
        "$extensions": {
          "type": "object",
          "description": "Custom extensions",
          "additionalProperties": true
        }
      },
      "patternProperties": {
        "^[^$].*": {
          "$ref": "#/$defs/groupOrToken"
        }
      },
      "additionalProperties": false
    },
    "groupOrToken": {
      "anyOf": [
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.1.0/color"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.1.0/dimension"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.1.0/font-family"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.1.0/font-weight"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.1.0/duration"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.1.0/number"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.1.0/shadow"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.1.0/typography"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.1.0/cubic-bezier"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.1.0/stroke-style"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.1.0/border"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.1.0/transition"
        },
        {
          "$ref": "https://tokens.unpunny.fun/schema/0.1.0/gradient"
        },
        {
          "$ref": "#/$defs/genericToken"
        },
        {
          "$ref": "#/$defs/group"
        }
      ]
    },
    "genericToken": {
      "type": "object",
      "description": "Generic token for types not yet defined",
      "properties": {
        "$type": {
          "type": "string",
          "description": "Token type"
        },
        "$value": {
          "description": "Token value"
        },
        "$ref": {
          "type": "string",
          "pattern": "^(#(/[^/]+)*|[^#]+#(/[^/]+)*|\\./[^#]+#(/[^/]+)*)$",
          "description": "Reference to another token"
        },
        "$description": {
          "type": "string"
        },
        "$extensions": {
          "type": "object"
        },
        "$deprecated": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "string"
            }
          ]
        }
      },
      "oneOf": [
        {
          "required": [
            "$value"
          ],
          "not": {
            "required": [
              "$ref"
            ]
          }
        },
        {
          "required": [
            "$ref"
          ],
          "not": {
            "required": [
              "$value"
            ]
          }
        }
      ],
      "additionalProperties": false
    }
  }
}