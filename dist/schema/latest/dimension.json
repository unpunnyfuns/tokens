{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tokens.unpunny.fun/schema/0.2.0-dev/dimension",
  "title": "Dimension Token Schema",
  "description": "Schema for dimension tokens (spacing, sizing, etc)",
  "allOf": [
    {
      "$ref": "https://tokens.unpunny.fun/schema/0.2.0-dev/base#/$defs/leaf"
    },
    {
      "type": "object",
      "properties": {
        "$type": {
          "type": "string",
          "const": "dimension"
        },
        "$value": {
          "$ref": "https://tokens.unpunny.fun/schema/0.2.0-dev/value-types#/$defs/dimensionValue"
        }
      },
      "required": [
        "$type"
      ]
    }
  ]
}