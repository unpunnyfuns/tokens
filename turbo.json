{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["tsconfig.base.json", "tsconfig.json", "biome.json"],
  "globalEnv": ["NODE_ENV", "CI"],
  "boundaries": {
    "tags": {
      "public": {
        "dependencies": { "deny": ["internal"] }
      },
      "internal": {
        "dependents": { "deny": ["public"] }
      },
      "foundation": {
        "dependencies": { "deny": ["core", "processing", "pipeline", "app", "fixtures", "loader", "bundler"] }
      },
      "core": {
        "dependencies": { "deny": ["processing", "pipeline", "app", "fixtures"] }
      },
      "processing": {
        "dependencies": { "deny": ["pipeline", "app", "fixtures"] }
      },
      "pipeline": {
        "dependencies": { "deny": ["app", "fixtures"] }
      },
      "loader": {
        "dependencies": { "deny": ["bundler"] }
      },
      "bundler": {
        "dependencies": { "deny": ["loader"] }
      },
      "app": {
        "dependents": { "deny": ["foundation", "core", "processing", "pipeline", "internal", "loader", "bundler", "fixtures"] }
      },
      "fixtures": {}
    }
  },
  "tasks": {
    "@upft/schemas#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "outputs": ["dist/**"],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": [],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "env": ["NODE_ENV", "CI"],
      "cache": true
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "lint": {
      "dependsOn": [],
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "dependsOn": [],
      "outputs": [],
      "cache": false
    },
    "format": {
      "dependsOn": [],
      "outputs": [],
      "cache": true
    },
    "format:fix": {
      "dependsOn": [],
      "outputs": [],
      "cache": false
    },
    "validate:examples": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "validate:bundler-output": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "clean": { "cache": false },
    "dev": { "persistent": true, "cache": false },
    "depcheck": { "dependsOn": [], "outputs": [], "cache": true },
    "quality": {
      "dependsOn": ["lint", "typecheck", "depcheck", "test"],
      "outputs": [],
      "cache": false
    },
    "depcheck:workspace": { "dependsOn": [], "outputs": [], "cache": true }
  }
}
