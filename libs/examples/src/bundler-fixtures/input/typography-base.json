{
  "typography": {
    "fontFamily": {
      "sans": {
        "$value": ["Inter", "system-ui", "sans-serif"],
        "$type": "fontFamily"
      },
      "mono": {
        "$value": ["Fira Code", "monospace"],
        "$type": "fontFamily"
      }
    },
    "fontSize": {
      "xs": {
        "$value": {
          "value": 12,
          "unit": "px"
        },
        "$type": "dimension"
      },
      "sm": {
        "$value": {
          "value": 14,
          "unit": "px"
        },
        "$type": "dimension"
      },
      "base": {
        "$value": {
          "value": 16,
          "unit": "px"
        },
        "$type": "dimension"
      },
      "lg": {
        "$value": {
          "value": 18,
          "unit": "px"
        },
        "$type": "dimension"
      },
      "xl": {
        "$value": {
          "value": 20,
          "unit": "px"
        },
        "$type": "dimension"
      }
    },
    "fontWeight": {
      "regular": {
        "$value": 400,
        "$type": "number"
      },
      "medium": {
        "$value": 500,
        "$type": "number"
      },
      "bold": {
        "$value": 700,
        "$type": "number"
      }
    }
  }
}
