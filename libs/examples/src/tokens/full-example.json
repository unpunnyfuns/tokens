{
  "$schema": "../../schemas/tokens/full.schema.json",
  "$description": "Example using full schema with strict type validation",
  "colors": {
    "$description": "Color tokens",
    "primary": {
      "$type": "color",
      "$value": {
        "colorSpace": "srgb",
        "components": [0, 0.4, 0.8],
        "alpha": 1,
        "hex": "#0066cc"
      }
    },
    "secondary": {
      "$type": "color",
      "$value": {
        "colorSpace": "srgb",
        "components": [1, 0.4, 0],
        "alpha": 1,
        "hex": "#ff6600"
      }
    }
  },
  "spacing": {
    "$description": "Spacing tokens",
    "small": {
      "$type": "dimension",
      "$value": {
        "value": 4,
        "unit": "px"
      }
    },
    "medium": {
      "$type": "dimension",
      "$value": {
        "value": 8,
        "unit": "px"
      }
    }
  },
  "typography": {
    "$description": "Typography tokens",
    "heading": {
      "$type": "typography",
      "$value": {
        "fontFamily": ["Inter", "sans-serif"],
        "fontSize": "24px",
        "fontWeight": 700,
        "lineHeight": 1.2
      }
    },
    "body": {
      "$type": "typography",
      "$value": {
        "fontFamily": ["Inter", "sans-serif"],
        "fontSize": "16px",
        "fontWeight": 400,
        "lineHeight": 1.5
      }
    }
  },
  "shadows": {
    "$description": "Shadow tokens",
    "subtle": {
      "$type": "shadow",
      "$value": {
        "color": {
          "colorSpace": "srgb",
          "components": [0, 0, 0],
          "alpha": 0.125
        },
        "offsetX": "0px",
        "offsetY": "2px",
        "blur": "4px"
      }
    }
  },
  "durations": {
    "fast": {
      "$type": "duration",
      "$value": "200ms"
    },
    "slow": {
      "$type": "duration",
      "$value": "500ms"
    }
  }
}
