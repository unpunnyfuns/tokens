{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tokens.unpunny.fun/schemas/v0.0.7/tokens/types/number.schema.json",
  "title": "Number Token Schema",
  "description": "Schema for number tokens",
  "allOf": [
    {
      "$ref": "../base.schema.json#/$defs/leaf"
    },
    {
      "type": "object",
      "properties": {
        "$type": {
          "type": "string",
          "const": "number"
        },
        "$value": {
          "type": "number",
          "description": "Numeric value"
        }
      },
      "required": [
        "$type"
      ]
    }
  ]
}
