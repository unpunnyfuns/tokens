{
  "$schema": "../../schemas/tokens/full.schema.json",
  "$description": "Advanced color space examples including linear RGB and XYZ",

  "linear-rgb": {
    "$description": "sRGB Linear color space examples",
    "white": {
      "$type": "color",
      "$value": {
        "colorSpace": "srgb-linear",
        "components": [1, 1, 1],
        "alpha": 1
      }
    },
    "middle-gray": {
      "$type": "color",
      "$value": {
        "colorSpace": "srgb-linear",
        "components": [0.2158, 0.2158, 0.2158],
        "alpha": 1
      },
      "$description": "50% perceptual gray in linear RGB"
    },
    "red": {
      "$type": "color",
      "$value": {
        "colorSpace": "srgb-linear",
        "components": [1, 0, 0],
        "alpha": 1
      }
    }
  },

  "xyz-d65": {
    "$description": "CIE XYZ color space with D65 illuminant",
    "white": {
      "$type": "color",
      "$value": {
        "colorSpace": "xyz-d65",
        "components": [0.9505, 1.0, 1.089],
        "alpha": 1
      }
    },
    "red": {
      "$type": "color",
      "$value": {
        "colorSpace": "xyz-d65",
        "components": [0.4124, 0.2126, 0.0193],
        "alpha": 1
      }
    },
    "green": {
      "$type": "color",
      "$value": {
        "colorSpace": "xyz-d65",
        "components": [0.3576, 0.7152, 0.1192],
        "alpha": 1
      }
    },
    "blue": {
      "$type": "color",
      "$value": {
        "colorSpace": "xyz-d65",
        "components": [0.1805, 0.0722, 0.9505],
        "alpha": 1
      }
    }
  },

  "xyz-d50": {
    "$description": "CIE XYZ color space with D50 illuminant (print standard)",
    "white": {
      "$type": "color",
      "$value": {
        "colorSpace": "xyz-d50",
        "components": [0.9642, 1.0, 0.8251],
        "alpha": 1
      }
    },
    "red": {
      "$type": "color",
      "$value": {
        "colorSpace": "xyz-d50",
        "components": [0.4361, 0.2225, 0.0139],
        "alpha": 1
      }
    },
    "green": {
      "$type": "color",
      "$value": {
        "colorSpace": "xyz-d50",
        "components": [0.3852, 0.7169, 0.0971],
        "alpha": 1
      }
    },
    "blue": {
      "$type": "color",
      "$value": {
        "colorSpace": "xyz-d50",
        "components": [0.1431, 0.0606, 0.7141],
        "alpha": 1
      }
    }
  },

  "mixed-references": {
    "$description": "Examples using references across color spaces",
    "brand-primary": {
      "$type": "color",
      "$value": {
        "colorSpace": "oklch",
        "components": [0.6, 0.15, 250],
        "alpha": 1
      },
      "$description": "Brand color defined in OKLCH for perceptual uniformity"
    },
    "ui-primary": {
      "$ref": "#/mixed-references/brand-primary"
    },
    "print-primary": {
      "$ref": "#/xyz-d50/blue"
    }
  }
}
