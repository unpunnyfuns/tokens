{
  "$schema": "../../schemas/tokens/full.schema.json",
  "$description": "Examples of composite token types",

  "animations": {
    "$description": "Animation and transition tokens",
    "easings": {
      "$description": "Cubic bezier timing functions",
      "ease-in": {
        "$type": "cubicBezier",
        "$value": [0.42, 0, 1, 1]
      },
      "ease-out": {
        "$type": "cubicBezier",
        "$value": [0, 0, 0.58, 1]
      },
      "ease-in-out": {
        "$type": "cubicBezier",
        "$value": [0.42, 0, 0.58, 1]
      },
      "custom": {
        "$type": "cubicBezier",
        "$value": [0.17, 0.67, 0.83, 0.67]
      }
    },
    "transitions": {
      "$description": "Complete transition definitions",
      "quick": {
        "$type": "transition",
        "$value": {
          "duration": "200ms",
          "delay": "0ms",
          "timingFunction": [0.42, 0, 0.58, 1]
        }
      },
      "smooth": {
        "$type": "transition",
        "$value": {
          "duration": "350ms",
          "delay": "0ms",
          "timingFunction": {
            "$ref": "#/animations/easings/ease-in-out/$value"
          }
        }
      },
      "delayed": {
        "$type": "transition",
        "$value": {
          "duration": "500ms",
          "delay": "150ms",
          "timingFunction": { "$ref": "#/animations/easings/custom/$value" }
        }
      }
    }
  },

  "borders": {
    "$description": "Border and stroke style tokens",
    "styles": {
      "$description": "Stroke style definitions",
      "solid": {
        "$type": "strokeStyle",
        "$value": "solid"
      },
      "dashed": {
        "$type": "strokeStyle",
        "$value": "dashed"
      },
      "custom-dash": {
        "$type": "strokeStyle",
        "$value": {
          "dashArray": ["4px", "2px"],
          "lineCap": "round"
        }
      },
      "long-dash": {
        "$type": "strokeStyle",
        "$value": {
          "dashArray": ["12px", "4px", "2px", "4px"],
          "lineCap": "butt"
        }
      }
    },
    "definitions": {
      "$description": "Complete border definitions",
      "default": {
        "$type": "border",
        "$value": {
          "color": "#e2e2e2",
          "width": "1px",
          "style": "solid"
        }
      },
      "focus": {
        "$type": "border",
        "$value": {
          "color": "#0066cc",
          "width": "2px",
          "style": "solid"
        }
      },
      "dashed": {
        "$type": "border",
        "$value": {
          "color": "#999999",
          "width": "1px",
          "style": { "$ref": "#/borders/styles/custom-dash/$value" }
        }
      },
      "heavy": {
        "$type": "border",
        "$value": {
          "color": "#333333",
          "width": { "value": 0.25, "unit": "rem" },
          "style": { "$ref": "#/borders/styles/solid/$value" }
        }
      }
    }
  },

  "gradients": {
    "$description": "Gradient token definitions",
    "brand": {
      "$type": "gradient",
      "$value": [
        {
          "color": {
            "colorSpace": "srgb",
            "components": [0, 0.4, 0.8],
            "alpha": 1
          },
          "position": 0
        },
        {
          "color": {
            "colorSpace": "srgb",
            "components": [0, 0.6, 1],
            "alpha": 1
          },
          "position": 1
        }
      ]
    },
    "sunset": {
      "$type": "gradient",
      "$value": [
        {
          "color": {
            "colorSpace": "srgb",
            "components": [1, 0.42, 0.42],
            "alpha": 1
          },
          "position": 0
        },
        {
          "color": {
            "colorSpace": "srgb",
            "components": [1, 0.85, 0.24],
            "alpha": 1
          },
          "position": 0.5
        },
        {
          "color": {
            "colorSpace": "srgb",
            "components": [0.416, 0.353, 0.804],
            "alpha": 1
          },
          "position": 1
        }
      ]
    },
    "monochrome": {
      "$type": "gradient",
      "$value": [
        {
          "color": {
            "colorSpace": "srgb",
            "components": [1, 1, 1],
            "alpha": 1
          },
          "position": 0
        },
        {
          "color": {
            "colorSpace": "srgb",
            "components": [0.94, 0.94, 0.94],
            "alpha": 1
          },
          "position": 0.25
        },
        {
          "color": {
            "colorSpace": "srgb",
            "components": [0.8, 0.8, 0.8],
            "alpha": 1
          },
          "position": 0.75
        },
        {
          "color": {
            "colorSpace": "srgb",
            "components": [0.6, 0.6, 0.6],
            "alpha": 1
          },
          "position": 1
        }
      ]
    },
    "transparent-fade": {
      "$type": "gradient",
      "$value": [
        {
          "color": {
            "colorSpace": "srgb",
            "components": [0, 0, 0],
            "alpha": 1
          },
          "position": 0
        },
        {
          "color": {
            "colorSpace": "srgb",
            "components": [0, 0, 0],
            "alpha": 0
          },
          "position": 1
        }
      ]
    }
  }
}
