{
  "$schema": "../../schemas/tokens/full.schema.json",
  "$description": "Examples showing the two reference patterns",
  "primitives": {
    "colors": {
      "blue-500": {
        "$type": "color",
        "$value": {
          "colorSpace": "srgb",
          "components": [0.2, 0.5, 0.9],
          "alpha": 1
        }
      }
    },
    "dimensions": {
      "spacing-4": {
        "$type": "dimension",
        "$value": {
          "value": 16,
          "unit": "px"
        }
      }
    }
  },
  "semantic": {
    "$description": "Semantic tokens with typed references",
    "brand-primary": {
      "$type": "color",
      "$value": {
        "$ref": "#/primitives/colors/blue-500/$value"
      },
      "$description": "Primary brand color - references just the value"
    }
  },
  "aliases": {
    "$description": "Pure aliases - entire token is a reference",
    "primary": {
      "$ref": "#/semantic/brand-primary",
      "$description": "Alias to brand-primary token - inherits type and value"
    }
  },
  "composites": {
    "$description": "Composite tokens with value references",
    "card-border": {
      "$type": "border",
      "$value": {
        "color": {
          "$ref": "#/primitives/colors/blue-500/$value"
        },
        "width": {
          "$ref": "#/primitives/dimensions/spacing-4/$value"
        },
        "style": "solid"
      },
      "$description": "Border using references for color and width values"
    }
  }
}
