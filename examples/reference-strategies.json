{
  "$description": "Example showing different reference types",
  "tokens": {
    "internal": {
      "ref": {
        "$type": "color",
        "$value": {
          "$ref": "#/primitives/colors/blue"
        }
      },
      "alias": {
        "$type": "color",
        "$value": "{primitives.colors.red}"
      }
    },
    "external": {
      "file-ref": {
        "$type": "color",
        "$value": {
          "$ref": "../primitives/colors.json#/colors/green"
        }
      },
      "relative-ref": {
        "$type": "dimension",
        "$value": {
          "$ref": "./dimensions.json#/spacing/md"
        }
      }
    },
    "mixed": {
      "composite": {
        "$type": "shadow",
        "$value": {
          "color": {
            "$ref": "#/primitives/colors/black"
          },
          "offsetX": "{primitives.dimensions.xs}",
          "offsetY": {
            "$ref": "../primitives/dimensions.json#/spacing/xs"
          },
          "blur": "4px",
          "spread": "0px"
        }
      }
    }
  },
  "primitives": {
    "colors": {
      "blue": {
        "$type": "color",
        "$value": "#0000ff"
      },
      "red": {
        "$type": "color",
        "$value": "#ff0000"
      },
      "black": {
        "$type": "color",
        "$value": "#000000"
      }
    },
    "dimensions": {
      "xs": {
        "$type": "dimension",
        "$value": "2px"
      }
    }
  }
}
