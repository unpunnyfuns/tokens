{
  "$schema": "../schemas/resolver.schema.json",
  "name": "Design System Resolver",
  "description": "Manages token resolution across themes and modes",
  "sets": [
    {
      "name": "foundation",
      "values": [
        "tokens/primitives/colors.json",
        "tokens/primitives/dimensions.json",
        "tokens/primitives/typography.json"
      ]
    },
    {
      "name": "semantic",
      "values": ["tokens/semantic/colors.json", "tokens/semantic/spacing.json"]
    }
  ],
  "modifiers": [
    {
      "name": "theme",
      "values": [
        {
          "name": "light",
          "values": ["tokens/themes/light.json"]
        },
        {
          "name": "dark",
          "values": ["tokens/themes/dark.json"]
        }
      ]
    },
    {
      "name": "contrast",
      "values": [
        {
          "name": "normal",
          "values": []
        },
        {
          "name": "high",
          "values": ["tokens/modes/high-contrast.json"]
        }
      ]
    }
  ]
}
