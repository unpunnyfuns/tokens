{
  "$schema": "../../../schemas/tokens/full.schema.json",
  "$description": "Card component tokens - references semantic tokens following pyramid structure",

  "card": {
    "$description": "Card component design tokens",

    "container": {
      "background": {
        "$type": "color",
        "$value": { "$ref": "../semantic/colors.json#/background/primary" }
      },
      "border": {
        "$type": "border",
        "$value": {
          "color": { "$ref": "../semantic/colors.json#/border/subtle" },
          "width": {
            "$ref": "../primitives/dimensions.json#/border-width/thin"
          },
          "style": {
            "$ref": "../primitives/borders.json#/borders/styles/solid"
          }
        }
      },
      "radius": {
        "$type": "dimension",
        "$value": { "$ref": "../primitives/dimensions.json#/radius/lg" }
      },
      "shadow": {
        "$type": "shadow",
        "$value": [
          {
            "color": "#00000010",
            "offsetX": {
              "$ref": "../primitives/dimensions.json#/dimensions/zero"
            },
            "offsetY": {
              "$ref": "../primitives/dimensions.json#/dimensions/shadow/offset-sm"
            },
            "blur": {
              "$ref": "../primitives/dimensions.json#/dimensions/shadow/spread-md"
            },
            "spread": {
              "$ref": "../primitives/dimensions.json#/dimensions/zero"
            }
          },
          {
            "color": "#0000001a",
            "offsetX": {
              "$ref": "../primitives/dimensions.json#/dimensions/zero"
            },
            "offsetY": {
              "$ref": "../primitives/dimensions.json#/dimensions/shadow/offset-sm"
            },
            "blur": {
              "$ref": "../primitives/dimensions.json#/dimensions/shadow/blur-sm"
            },
            "spread": {
              "$ref": "../primitives/dimensions.json#/dimensions/zero"
            }
          }
        ]
      },
      "padding": {
        "$type": "dimension",
        "$value": { "$ref": "../semantic/spacing.json#/padding/lg" }
      }
    },

    "header": {
      "typography": {
        "$type": "typography",
        "$value": {
          "$ref": "../semantic/typography.json#/text-style/heading-3"
        }
      },
      "color": {
        "$type": "color",
        "$value": { "$ref": "../semantic/colors.json#/text/primary" }
      },
      "margin-bottom": {
        "$type": "dimension",
        "$value": { "$ref": "../semantic/spacing.json#/margin/sm" }
      }
    },

    "body": {
      "typography": {
        "$type": "typography",
        "$value": { "$ref": "../semantic/typography.json#/text-style/body" }
      },
      "color": {
        "$type": "color",
        "$value": { "$ref": "../semantic/colors.json#/text/secondary" }
      },
      "margin-bottom": {
        "$type": "dimension",
        "$value": { "$ref": "../semantic/spacing.json#/margin/md" }
      }
    },

    "footer": {
      "typography": {
        "$type": "typography",
        "$value": {
          "$ref": "../semantic/typography.json#/text-style/caption"
        }
      },
      "color": {
        "$type": "color",
        "$value": { "$ref": "../semantic/colors.json#/text/tertiary" }
      },
      "border-top": {
        "$type": "border",
        "$value": {
          "color": { "$ref": "../semantic/colors.json#/border/subtle" },
          "width": {
            "$ref": "../primitives/dimensions.json#/border-width/thin"
          },
          "style": {
            "$ref": "../primitives/borders.json#/borders/styles/solid"
          }
        }
      },
      "padding-top": {
        "$type": "dimension",
        "$value": { "$ref": "../semantic/spacing.json#/padding/md" }
      }
    },

    "interactive": {
      "hover": {
        "shadow": {
          "$type": "shadow",
          "$value": [
            {
              "color": "#00000014",
              "offsetX": {
                "$ref": "../primitives/dimensions.json#/dimensions/zero"
              },
              "offsetY": {
                "$ref": "../primitives/dimensions.json#/dimensions/scale/10"
              },
              "blur": {
                "$ref": "../primitives/dimensions.json#/dimensions/scale/16"
              },
              "spread": "-3px"
            },
            {
              "color": "#0000001a",
              "offsetX": {
                "$ref": "../primitives/dimensions.json#/dimensions/zero"
              },
              "offsetY": {
                "$ref": "../primitives/dimensions.json#/dimensions/shadow/blur-md"
              },
              "blur": {
                "$ref": "../primitives/dimensions.json#/dimensions/scale/6"
              },
              "spread": "-2px"
            }
          ]
        },
        "transform-scale": {
          "$type": "number",
          "$value": 1.02
        }
      },
      "active": {
        "transform-scale": {
          "$type": "number",
          "$value": 0.98
        }
      }
    }
  }
}
