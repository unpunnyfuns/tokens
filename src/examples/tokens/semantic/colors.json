    "disabled": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/gray/400" }
    },
    "inverse": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/base/white" }
    },
    "link": {
      "$type": "color",
      "$value": { "$ref": "#/brand/primary" }
    },
    "link-hover": {
      "$type": "color",
      "$value": { "$ref": "#/brand/primary-hover" }
    }
  },

  "background": {
    "primary": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/base/white" }
    },
    "secondary": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/gray/50" }
    },
    "tertiary": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/gray/100" }
    },
    "disabled": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/gray/100" }
    },
    "overlay": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/base/black-50" }
    },
    "inverse": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/gray/900" }
    }
  },

  "border": {
    "default": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/gray/200" }
    },
    "subtle": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/gray/100" }
    },
    "strong": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/gray/300" }
