    "success": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/green/600" }
    },
    "success-light": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/green/50" }
    },
    "info": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/blue/500" }
    },
    "info-light": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/blue/50" }
    }
  },

  "text": {
    "primary": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/gray/900" }
