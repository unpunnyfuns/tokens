{
  "$schema": "../../../schemas/tokens/base.schema.json",
  "$description": "Semantic color tokens - references to primitives with meaningful names",

  "brand": {
    "primary": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/blue/600" }
    },
    "primary-hover": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/blue/700" }
    },
    "primary-active": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/blue/800" }
    },
    "secondary": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/gray/600" }
    },
    "secondary-hover": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/gray/700" }
    },
    "secondary-active": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/gray/800" }
    }
  },

  "feedback": {
    "error": {
      "$type": "color",
      "$value": { "$ref": "../primitives/colors.json#/colors/red/600" }
