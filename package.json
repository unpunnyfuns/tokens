{
  "name": "@unpunnyfuns/tokens",
  "version": "0.2.1",
  "description": "JSON Schema for DTCG-style design tokens with resolver manifest and JSON pointer aliases",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unpunnyfuns/tokens.git"
  },
  "bugs": {
    "url": "https://github.com/unpunnyfuns/tokens/issues"
  },
  "homepage": "https://github.com/unpunnyfuns/tokens#readme",
  "author": "unpunnyfuns <unpunnyfuns@gmail.com>",
  "license": "MIT",
  "keywords": [
    "design-tokens",
    "dtcg",
    "json-schema",
    "design-system",
    "tokens",
    "resolver"
  ],
  "type": "module",
  "main": "./src/index.ts",
  "bin": {
    "upft": "./src/cli.ts"
  },
  "engines": {
    "node": ">=22.6.0"
  },
  "exports": {
    ".": "./src/index.ts",
    "./schemas/latest/*": "./dist/schema/latest/*",
    "./schemas/*": "./dist/schema/*",
    "./validators": "./src/validation/index.ts",
    "./bundler": "./src/bundler/index.ts",
    "./bundler/api": "./src/bundler/api.ts",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "src/",
    "schemas/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "// Code Quality": "",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "// Testing": "",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "// Development & Validation": "",
    "dev": "node --experimental-strip-types scripts/dev-cli.ts",
    "dev:schemas": "npm run dev validate-schemas",
    "dev:examples": "npm run dev test",
    "dev:full": "npm run dev:schemas && npm run dev:examples && npm run test:run",
    "validate": "node --experimental-strip-types src/cli.ts validate",
    "validate:examples": "npm run validate ./examples",
    "bundle": "node --experimental-strip-types src/cli.ts bundle",
    "// Watch Scripts": "",
    "watch": "npm run watch:test",
    "watch:test": "vitest",
    "watch:examples": "nodemon --watch schemas --watch examples --watch src --ext json,ts --exec \"npm run validate:examples\"",
    "watch:schemas": "nodemon --watch schemas --watch src --ext json,ts --exec \"npm run dev:schemas\"",
    "watch:all": "nodemon --watch schemas --watch examples --watch src --ext json,ts --exec \"npm run dev:full\"",
    "// Build": "",
    "build": "npm run build:schemas",
    "build:schemas": "node --experimental-strip-types scripts/build-schemas.ts",
    "// CI/CD Workflows": "",
    "ci:check": "npm run check && npm run typecheck",
    "ci:test": "npm run test:run",
    "ci:validate": "npm run dev:schemas && npm run validate:examples",
    "ci:build": "npm run build",
    "ci:full": "npm run ci:check && npm run ci:test && npm run ci:validate && npm run ci:build"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "commander": "^14.0.0",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "glob": "^11.0.3",
    "nodemon": "3.1.9",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
