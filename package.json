{
  "name": "upft",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=22.6.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "test:e2e": "turbo test:e2e",
    "test:coverage": "turbo test:coverage",
    "test:watch": "turbo test:watch",
    "lint": "biome check --write . && turbo lint",
    "format": "biome format --write . && turbo format",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean",
    "dev": "turbo dev",
    "quality": "turbo format lint typecheck test",
    "deps:check": "pnpm -r outdated",
    "deps:update": "pnpm -r update",
    "depcheck": "dependency-cruiser libs apps --config .dependency-cruiser.cjs && turbo depcheck",
    "workspace:graph": "turbo graph",
    "workspace:clean": "pnpm -r exec rm -rf node_modules dist && rm -rf node_modules",
    "workspace:reset": "pnpm workspace:clean && pnpm install",
    "release:prepare": "pnpm quality && pnpm build",
    "turbo": "turbo"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@changesets/cli": "^2.29.6",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "dependency-cruiser": "^17.0.1",
    "json-schema-to-typescript": "^15.0.4",
    "tsx": "^4.20.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
